{
  "manifest_version": 2,
  "name": "Microsoft rewards bot",
  "version": "1.0.0",
  "description": "Bot for Microsoft rewards",

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["src/popup.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.bing.com/*"],
      "js": ["src/popup.js"]
    }
  ],
  "browser_action": {
    "default_icon": "imgs/logo2.png",
    "default_popup": "./popup.html",
    "default_title": "Microsoft rewards bot"
  }
}