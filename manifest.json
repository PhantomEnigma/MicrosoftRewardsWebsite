{
    "manifest_version": 2,
    "name": "Microsoft rewards bot",
    "version": "1.0.0",
    "description": "Bot for Microsoft rewards",

    "permissions": [
      "activeTab",
      "tabs",
    "http://*/*",
    "https://*/*"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["https://www.google.com/*"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_icon": "icon16.png",
      "default_popup": "popup.html"
    }
  }